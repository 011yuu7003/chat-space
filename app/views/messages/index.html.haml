.flash-box
.wrapper
  .chat-side
    .side-header
      .side-header__box
        %p.side-header__box__user-name seo
        %ul.side-header__box__menu
          %li.side-header__box__menu__new-group
            =link_to "" do
              %i.fa.fa-edit
          %li.side-header__box__menu__edit-user
            =link_to "" do
              %i.fa.fa-cog
    .groups
      .group
        %p.group__group-name sample
        %p.group__latest-message Good bye world

  .chat-main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group sample
        %ul.main-header__left-box__member-list 
          Menbers:   
          %li.main-header__left-box__member-list__member  
            seo neko
      .main-header__edit-btn Edit

    .messages
      = render @messages

    .form
      = form_for [@group, @message] do |f|
        .input-box
          = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
          .input-box__image
            = f.label :image, class: 'form__mask__image' do
              = fa_icon 'picture-o', class: 'fa'
              = f.file_field :image, class: 'input-box__image__file'
          = f.submit 'Send', class: 'submit-btn'
