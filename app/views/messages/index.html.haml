.flash-box
.wrapper
  .chat-side
    .side-header
      .side-header__box
        %p.side-header__box__user-name seo
        %ul.side-header__box__menu
          %li.side-header__box__menu__new-group
            =link_to "" do
              %i.fa.fa-edit
          %li.side-header__box__menu__edit-user
            =link_to "" do
              %i.fa.fa-cog
    .groups
      .group
        %p.group__group-name sample
        %p.group__latest-message Good bye world

  .chat-main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group sample
        %ul.main-header__left-box__member-list 
          Menbers:   
          %li.main-header__left-box__member-list__member  
            seo neko
      .main_header__edit-btn Edit

    .messages
      .message
        .message__upper-info
          %p.message__upper-info__taker seo
          %p.message__upper-info__date 2016/09/21 06:16:55
        %p.message__text Hellow world

    .form
      %form.new_message{id: 'new_message', enctype: 'mutipart/form-data', action: '',:method => 'post'}
        %input{name: 'utf8', type: 'hidden', value: ''}
        %input{type: 'hidden', name: 'authenticity_token', value: ''}
        .input-box
          %input.input-box__text{placeholder: "type a massage", type: "text", name: "message[content]", id: 'message_content'}
          %label.input-box__image{for: "message_image"}
            %i.fa.fa-image
            %input.input-box__image__file{type: "file", name: "massage[content]", id: "message_image"}
          %input.submit-btn{type: "submit", name: "commit", value:"Send"}
              
